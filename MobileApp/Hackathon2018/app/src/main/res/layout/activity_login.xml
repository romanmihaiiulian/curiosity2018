<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ing.hackathon2018.LoginActivity">

    <LinearLayout
        android:layout_width="371dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="2px"
        android:layout_marginRight="2px"
        android:background="@color/white"
        android:gravity="bottom"
        android:orientation="vertical"
        android:weightSum="1"
        tools:gravity="center_horizontal|center">

        <ImageView
            android:id="@+id/img_ing_logo"
            android:layout_width="159dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ing_logo" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="55px"
            android:layout_weight="0.02"
            android:background="@color/ingOrange"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_ing_commercial"
                android:layout_width="226dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/commercial_up" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/img_phone"
                    android:layout_width="144dp"
                    android:layout_height="43dp"
                    app:srcCompat="@drawable/mobile" />

                <ImageView
                    android:id="@+id/commercial"
                    android:layout_width="141dp"
                    android:layout_height="83dp"
                    app:srcCompat="@drawable/ing_commercial" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="170px"
            android:orientation="vertical"
            android:weightSum="1">

            <EditText
                android:id="@+id/et_login_username"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="#FFFFFF"
                android:drawableLeft="@drawable/username"
                android:hint="Username"
                android:inputType="text"
                android:textColor="#FF000000" />

            <EditText
                android:id="@+id/et_login_password"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="#FFFFFF"
                android:drawableLeft="@drawable/password"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="#FF000000" />

            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15px"
                android:background="@color/ingOrange"
                android:text="LOGIN"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/imgview_record"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_marginTop="50px"
                app:srcCompat="@drawable/record" />
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:background="@color/white"
                android:gravity="bottom|end"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="80px"
                    android:layout_height="80px"
                    app:srcCompat="@drawable/phone" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"></Space>

                <ImageView
                    android:layout_width="100px"
                    android:layout_height="100px"
                    app:srcCompat="@drawable/location" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"></Space>

                <ImageView
                    android:layout_width="100px"
                    android:layout_height="100px"
                    app:srcCompat="@drawable/barcode" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"></Space>

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="27dp"
                    android:layout_height="100px"
                    android:layout_weight="0.10"
                    app:srcCompat="@drawable/exchange" />
            </LinearLayout>

    </LinearLayout>

</LinearLayout>
