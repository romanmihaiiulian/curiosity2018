<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ing.hackathon2018.LoginActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:background="@color/white"
        android:orientation="vertical"
        android:weightSum="1">

        <ImageView
            android:id="@+id/img_ing_logo"
            android:layout_width="159dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ing_logo" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="55px"
            android:layout_weight="0.02"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_ing_commercial"
                android:layout_width="226dp"
                android:layout_height="127dp"
                app:srcCompat="@drawable/ing_commercial" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/img_phone"
                    android:layout_width="179dp"
                    android:layout_height="65dp"
                    android:layout_marginBottom="1dp"
                    app:srcCompat="@drawable/mobile" />

                <ImageView
                    android:id="@+id/commercial"
                    android:layout_width="162dp"
                    android:layout_height="83dp"
                    app:srcCompat="@drawable/ing_commercial" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="290px"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_login_username"
                android:layout_width="350dp"
                android:layout_height="30dp"
                android:background="#FFFFFF"
                android:drawableLeft="@drawable/username"
                android:hint="Username"
                android:inputType="text"
                android:textColor="#FF000000" />

            <EditText
                android:id="@+id/et_login_password"
                android:layout_width="350dp"
                android:layout_height="30dp"
                android:background="#FFFFFF"
                android:drawableLeft="@drawable/password"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="#FF000000" />

            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/ingOrange"
                android:text="LOGIN"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/imgview_record"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/record" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
